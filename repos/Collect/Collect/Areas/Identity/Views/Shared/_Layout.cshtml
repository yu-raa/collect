<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Collect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Collect.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <ul class="nav nav-pills">
            <li class="active">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" id="collect">Collecting</a>
            </li>
            <li class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckLang" oninput="SetLanguage(this)" />
                <label class="form-check-label" for="flexSwitchCheckLang" id="setRu">Translate page to Russian</label>
            </li>
            <li class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckMode" oninput="SetTheme(this)" />
                <label class="form-check-label" for="flexSwitchCheckMode" id="darkth">Dark mode</label>
            </li>
            <partial name="_LoginPartial" />
        </ul>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Collecting
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
